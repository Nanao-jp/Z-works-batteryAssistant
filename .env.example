# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here  # OpenAIのAPIキー

# アプリケーション設定
MODEL_NAME=llama3   # 使用するモデル (Ollamaで利用可能なモデル名)
TEMPERATURE=0.7     # 温度パラメータ (0.0〜1.0)

# ドキュメント設定
DOCS_DIR=./docs     # AI開発の学習資料を置くディレクトリ
DB_DIR=./db         # ベクトルDBの保存ディレクトリ

# Ollama API設定
OLLAMA_API_BASE=https://your-ollama-server.com  # リモートOllama APIのURL
OLLAMA_API_KEY=your_api_key_here                # 認証キー（設定されている場合） 